---
import Layout from '$layouts/Default.astro';
import WordSpin from '$components/WordSpin.astro';

const WORDS = [
	"Convenience",
	"Security",
	"Speed",
	"Privacy",
	"Reliability"
];
---

<Layout title="Home" y_centered>
	<img src="/logo.png" class="
		h-80 aspect-square
	" alt="Panthios Logo" />
	<h2 class="
		text-4xl font-bold text-center
	">
		<WordSpin words={WORDS} /> is not luxurious
	</h2>
</Layout>