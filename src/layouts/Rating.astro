---
const { title } = Astro.props;

const COLOR = "#dd9933";
const SCORE = 6;
---


<div class="
  flex flex-col justify-start items-center
  w-full flex-grow
  px-4
">
  <div class="
    flex flex-row justify-start items-center
    h-fit w-full
    text-4xl
  ">
    <div class={`
      h-[1.4em] aspect-square
      rounded-[25%]
      mr-4
    `} style={`
      background-color: ${COLOR};
    `} />
    <h2 class="
      text-4xl font-bold
    ">
      {title}
    </h2>
  </div>
</div>